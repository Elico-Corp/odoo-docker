#!/bin/bash
#
# This script is designed to be run inside the container
#

# fail hard and fast even on pipelines
set -eo pipefail

log_src='['${0##*/}']'

function help {
    set +e
    cat bin/help.txt
    set -e
}

function login  {
    echo $log_src[`date +%F.%H:%M:%S`]' Running bash'
    set +e
    if [[ ! -e $1 && $1 = "root" ]]; then
        /bin/bash
    else
        sudo su - odoo
    fi
    SERVICE_PID=$!
    set -e
}

function start {
    echo $log_src[`date +%F.%H:%M:%S`]' Updating Odoo conf...'
    if [ "$ADMIN_PASSWORD" ]; then
        sed -i "s/_ADMIN_PASSWORD_/$ADMIN_PASSWORD/g" /opt/odoo/etc/odoo.conf
    fi

    if [ "$DB_USER" ]; then
        sed -i "s/_DB_USER_/$DB_USER/g" /opt/odoo/etc/odoo.conf
    fi

    if [ "$DB_PASSWORD" ]; then
        sed -i "s/_DB_PASSWORD_/$DB_PASSWORD/g" /opt/odoo/etc/odoo.conf
    fi

    if [ "$ADDONS_REPO" ]; then
        echo $log_src[`date +%F.%H:%M:%S`]' Setting up SSH key'
        cp -R /mnt/ssh /root/.ssh
        chown -R $USER:$USER /root/.ssh
        chmod 600 /root/.ssh/*
        ssh-keyscan github.com  >> /root/.ssh/known_hosts
        echo $log_src[`date +%F.%H:%M:%S`]' Downloading additional addons...'
        python /mnt/scripts/addons.py
    else
        echo $log_src[`date +%F.%H:%M:%S`]' No additional addons to download'
        odoo_conf_file="/opt/odoo/etc/odoo.conf"
        search_txt_result=$(grep -n "addons_path =" "$odoo_conf_file")
        if [ ! -n "$search_txt_result" ]; then
            echo addons_path = /opt/odoo/sources/odoo/addons >> $odoo_conf_file
        fi
    fi

    echo $log_src[`date +%F.%H:%M:%S`]' Checking special requirements...'
    bash /mnt/scripts/setup.sh

    echo $log_src[`date +%F.%H:%M:%S`]' Changing owner of Odoo folder...'
    set +e
    if [ ! -e $1 ]; then
        echo $log_src[`date +%F.%H:%M:%S`]' ...with additional args: $*'
    fi
    sudo -i -u odoo /usr/bin/python \
                    /opt/odoo/sources/odoo/openerp-server \
                    -c $file \
                    $*

    SERVICE_PID=$!
    set -e
}

# smart shutdown on SIGINT and SIGTERM
function on_exit() {
    kill -TERM $SERVICE_PID
    wait $SERVICE_PID 2>/dev/null
    exit 0
}
trap on_exit INT TERM

echo $log_src[`date +%F.%H:%M:%S`]' Search conf file'
if [[ -z "$ODOO_CONF" ]];
then
    file="/opt/odoo/etc/odoo.conf"
else
    file=$ODOO_CONF
fi
echo $log_src[`date +%F.%H:%M:%S`]' Running chown...'
chown -R odoo /opt/odoo
echo $log_src[`date +%F.%H:%M:%S`]' Running command...'
for arg in "$*"
do
    $arg
done

wait
